// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  password String
  email    String

  @@map("users")
}

model Highlight {
  id               String             @id @default(uuid())
  title            String
  description      String
  HighlightsPhotos HighlightsPhotos[]

  @@map("highlights")
}

model HighlightsPhotos {
  id          String    @id @default(uuid())
  fileName    String
  Highlight   Highlight @relation(fields: [highlightId], references: [id])
  highlightId String

  @@map("highlightsPhotos")
}
